<div class="container">
    <div class="row">
        <div class="col-lg-12 header">
            <h1>Eat Da Burgers!</h1>
            <h2>Add your own burgers and devour them.</h2>
        </div>
        <div class="col-lg-6 col-md-12">
            <h3>Menu Items</h3>
            {{#each burger_name}} {{#unless this.devoured}}
            <div class="single-burger d-flex justify-content-between">
                <div class="name">{{this.burger_name}}</div>
                <form action="/burgers/{{this.id}}?_method=put" method="POST">
                    <input type="hidden" value="1" name="devoured">
                    <button class="btn btn-primary" type="submit">Devoured It!</button>
                </form>
            </div>
            {{/unless}} {{/each}}
        </div>

        <div class="col-lg-6 col-md-12">
            <h3>All gone!</h3>
            {{#each burger_name}} {{#if this.devoured}}
            <div class="single-burger devoured d-flex justify-content-between">

                <div class="name">{{this.burger_name}}</div>
            </div>
            {{/if}} {{/each}}

        </div>
        <div class="col-lg-12 add-burger">
            <h3>Add a burger</h3>

            <form action="/burgers" method="POST">
                <div>
                    <div class="row">
                        <div class="col-lg-2"><label for="burg">Burger Name:</label></div>
                        <div class="col-lg-7"><input type="text" id="burg" class="form-control" name="burger_name"></div>
                        <div class="col-lg-3"><button class="btn btn-primary" type="submit">Add Burger</button></div>
                        

                    </div>


                </div>

            </form>
        </div>
    </div>
</div>